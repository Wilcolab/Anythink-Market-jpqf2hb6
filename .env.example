# SparkFleet Smart Meeting Assistant - Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sparkfleet_meetings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
WHISPER_API_KEY=your_whisper_api_key_here
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
GOOGLE_MEET_API_KEY=your_google_meet_api_key

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=your_organization_name

# Slack Integration
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@sparkfleet.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@sparkfleet.com

# Calendar Integration
GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json
GOOGLE_CALENDAR_TOKEN=path/to/token.json

# Application Settings
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your_secret_key_here_min_32_chars
ALLOWED_ORIGINS=http://localhost:3000,https://sparkfleet.com

# Performance Settings
MAX_CONCURRENT_TRANSCRIPTIONS=5
TRANSCRIPTION_TIMEOUT_MINUTES=30
SUMMARY_GENERATION_TIMEOUT_SECONDS=120

# Security & Compliance
ENABLE_CONSENT_ENFORCEMENT=true
ENCRYPTION_KEY=your_encryption_key_here
DATA_RETENTION_DAYS=90
PII_MASKING_ENABLED=true

# Feature Flags
ENABLE_REAL_TIME_TRANSCRIPTION=false
ENABLE_SLACK_INTEGRATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_TREND_DETECTION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
